@model ConsolidatedPlatformForRecruitmentAgencies.Models.Interview

@{
    ViewBag.Title = "ScheduleInterview";
    Layout = "~/Views/Shared/_LayoutCompany.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
<div class="main-content-inner" style="font-family:'Poppins'">
    <div class="row">
        <div class="col-lg-12 col-ml-12">
            <div class="row">
                <!-- Textual inputs start -->
                <div class="col-12 mt-5">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title text-center text-capitalize" style="font-family:'Poppins'">Schedule Interview</h4>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "col-form-label" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", @id = "example-text-input" } })
                                    @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Venue, htmlAttributes: new { @class = "col-form-label" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Venue, new { htmlAttributes = new { @class = "form-control", @id = "example-text-input" } })
                                    @Html.ValidationMessageFor(model => model.Venue, "", new { @class = "text-danger" })
                                </div>
                            </div>



                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Schedule" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
                        }


