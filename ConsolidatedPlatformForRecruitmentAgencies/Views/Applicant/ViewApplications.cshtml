@model IEnumerable<ConsolidatedPlatformForRecruitmentAgencies.Models.Job>

@{
    ViewBag.Title = "ViewApplications";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
@if (Model.Count() == 0)
{
    <br />
    <h2 class="text-center">
        Currently, You have not applied for any Job.
    </h2>
}
else
{
<h2 class="text-center">Job Applications</h2>
<br />
<table class="table table-striped table-bordered">
    <tr>
       
        <th>
            Job Category
        </th>
       
        <th>
            Job Role
        </th>
        <th>
           Job Description
        </th>
        <th>
            Date Applied
        </th>
        <td></td>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.JobCategory.JobCategoryName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.JobRole)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobDescription)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.DateApplied)
        </td>

        <td>
            @if (item.Scheduled == true)
            {
                <a href="/Applicant/ScheduledInterview">Interview Already Scheduled</a>
            }

            @if (item.Scheduled == false)
            {
                <a href="/Applicant/NotScheduled">Interview Not Scheduled</a>
            }
                   </td>
    </tr>
}

</table>
}