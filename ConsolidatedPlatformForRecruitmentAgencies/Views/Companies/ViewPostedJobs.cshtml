@model IEnumerable<ConsolidatedPlatformForRecruitmentAgencies.Models.Job>

@{
                /**/

                ViewBag.Title = "ViewPostedJobs";
                Layout = "~/Views/Shared/_LayoutCompany.cshtml";
}

@foreach (var items in Model)
{
    <!-- page title area end -->
    <div class="main-content-inner" style="font-family:'Poppins'">
        <div class="row">
            <div class="col-lg-12 mt-5">
                <div class="card">
                    <div class="card-body">
                        <div class="invoice-area">
                            <div class="invoice-head">
                                <div class="row">
                                    <div class="iv-left col-6">
                                        @*<span>POSTED JOBS</span>*@
                                    </div>
                                    <div class="iv-right col-6 text-md-right">
                                        <span>@DateTime.Now.ToLongDateString()</span>
                                    </div>
                                </div>
                            </div>

                            <div class="row align-items-center">
                                <div class="col-md-6">
                                    <div class="invoice-address">
                                        <h3>Posted By</h3>
                                        <h5>@items.Company.CompanyName</h5>
                                        <p style="font-family:'Poppins'">@items.Company.Address</p>

                                    </div>
                                </div>
                                <div class="col-md-6 text-md-right">
                                    <ul class="invoice-date">
                                        <li>Website :@items.Company.Website</li>
                                        <li>Email :@items.Company.Email</li>
                                    </ul>
                                </div>
                            </div>
                            
                            <div class="col-lg-12 mt-7">
                                <div class="card">
                                    <div class="card-body">
                                        @*<h4 class="header-title">Posted Jobs</h4>*@
                                        <div class="single-table">
                                            <div class="table-responsive">
                                                <table class="table text-center table-bordered table-striped table-hover">
                                                    <thead class="text-uppercase bg-primary">
                                                    <thead>
                                                        <tr class="text-capitalize">
                                                            <th class="text-center" style="width: 20%;">Job Category</th>
                                                            <th class="text-left" style="width: 30%; min-width: 130px;">Qualification</th>
                                                            <th min-width: 130px>Job Role</th>
                                                            <th style="min-width: 100px">Description</th>
                                                            <th>Deadline</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var item in Model)
                                                        {
                                                            <tr>
                                                                <td class="text-center">@item.JobCategory.JobCategoryName</td>
                                                                <td class="text-left">@item.Qualification.QualificationName</td>
                                                                <td>@item.JobRole</td>
                                                                <td>@item.JobDescription</td>
                                                                <td>@item.DeadLine</td>
                                                            </tr>
                                                        }
                                                        @*<tr>
                                                                <td class="text-center">2</td>
                                                                <td class="text-left">Beautiful flowers</td>
                                                                <td>2</td>
                                                                <td>$50</td>
                                                                <td>$100</td>
                                                            </tr>*@
                                                    </tbody>
                                                    <tfoot>
                                                        <tr>
                                                            @*<td colspan="4">total balance :</td>
                                                                <td>$140</td>*@
                                                        </tr>
                                                    </tfoot>
                                                </table>
                                            </div>
                                        </div>
                                        @*<div class="invoice-buttons text-right">
                                                <a href="#" class="invoice-btn">print invoice</a>
                                                <a href="#" class="invoice-btn">send invoice</a>
                                            </div>*@
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    }


















